ARG DEPENDENCY_IMAGE=presto/prestissimo-dependency:centos9
ARG BASE_IMAGE=quay.io/centos/centos:stream9
FROM ${DEPENDENCY_IMAGE} as prestissimo-dev

ARG OSNAME=centos
ARG EXTRA_CMAKE_FLAGS=''
ARG NUM_THREADS=8
ARG ARM_BUILD_TARGET=''
ARG CACHE_OPTION=''

ENV PROMPT_ALWAYS_RESPOND=n
ENV BUILD_BASE_DIR=_build
ENV LANG=C.UTF-8
ENV EXTRA_CMAKE_FLAGS=${EXTRA_CMAKE_FLAGS}
ENV BUILD_ROOT=/presto
ENV PRESTISSIMO_HOME=/opt/prestissimo

RUN --mount=type=bind,source=.,target=${BUILD_ROOT},rw \
    --mount=type=cache,target=/root/ccache-${OSNAME} \
    if [ "${CACHE_OPTION}" = "update" ]; then \
      echo "Updating ccache data"; \
      ccache -sz -v; \
    else \
      echo "[safe]" > /root/.gitconfig && \
      echo "  directory = ${BUILD_ROOT}" >> /root/.gitconfig && \
      echo "  directory = ${BUILD_ROOT}/presto-native-execution/velox" >> /root/.gitconfig && \
      cat /root/.gitconfig && \
      export CCACHE_DIR=/root/ccache-${OSNAME} && \
      if [ "${CACHE_OPTION}" = "clean" ]; then \
        echo "Cleaning ccache folder: /root/ccache-${OSNAME}" && \
        rm -rf ${CCACHE_DIR}/* ; \
      fi && \
      mkdir -p ${PRESTISSIMO_HOME}/bin && \
      mkdir -p ${PRESTISSIMO_HOME}/lib; \
    fi && \
    cd ${BUILD_ROOT}/presto-native-execution && \
    make release && df -h && \
    export OUT_DIR=release && \
    if [ "${OSNAME}" != "ubuntu" ]; then \
      make clean && \
      make debug && df -h && \
      export OUT_DIR=debug; \
    fi && \
    if [ "${CACHE_OPTION}" = "update" ]; then \
      echo "ccache data updated"; \
      make clean; \
    else \
      !(LD_LIBRARY_PATH=${LD_LIBRARY_PATH}:/usr/local/lib:/usr/local/lib64 ldd ${BUILD_ROOT}/presto-native-execution/${BUILD_BASE_DIR}/${OUT_DIR}/presto_cpp/main/presto_server  | grep "not found") && \
      LD_LIBRARY_PATH=${LD_LIBRARY_PATH}:/usr/local/lib:/usr/local/lib64 ldd ${BUILD_ROOT}/presto-native-execution/${BUILD_BASE_DIR}/${OUT_DIR}/presto_cpp/main/presto_server | awk 'NF == 4 { system("cp " $3 " ${PRESTISSIMO_HOME}/lib") }' && \
      cp ${BUILD_ROOT}/presto-native-execution/${BUILD_BASE_DIR}/${OUT_DIR}/presto_cpp/main/presto_server ${PRESTISSIMO_HOME}/bin/presto_server && \
      chmod 0755 ${PRESTISSIMO_HOME}/bin/presto_server && \
      echo "${PRESTISSIMO_HOME}/lib" > /etc/ld.so.conf.d/prestissimo.conf && ldconfig && \
      make clean && \
      mkdir -p /opt/cache && \
      rm -rf /opt/cache/.ccache && rm -rf /root/.ccache && \
      cp -r ${CCACHE_DIR} /opt/cache/.ccache && \
      ln -sf /opt/cache/.ccache /root/.ccache; \
    fi && \
    ccache -s -v

COPY --chmod=0755 presto-dev/prestissimo/etc $PRESTISSIMO_HOME/etc
COPY --chmod=0755 presto-dev/prestissimo/entrypoint.sh $PRESTISSIMO_HOME/
